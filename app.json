
{
  "expo": {
    "name": "Civic",
    "slug": "Civic",
    "version": "1.0.5",
    "orientation": "portrait",
    "icon": "./assets/images/7bcb7964-0c30-43fd-8aa4-aa6402fd8edb.png",
    "scheme": "civic",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kenyacivic.app",
      "icon": "./assets/images/7bcb7964-0c30-43fd-8aa4-aa6402fd8edb.png"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/eebec659-b8c1-4c52-bb3b-1840e5abf120.png",
        "backgroundColor": "#D32F2F"
      },
      "package": "com.simphoni.civic",
      "icon": "./assets/images/eebec659-b8c1-4c52-bb3b-1840e5abf120.png",
      "versionCode": 6
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/7bcb7964-0c30-43fd-8aa4-aa6402fd8edb.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/7bcb7964-0c30-43fd-8aa4-aa6402fd8edb.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#D32F2F"
        }
      ],
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Kenya Civic to access your camera to record incident videos and scan Form 34A.",
          "microphonePermission": "Allow Kenya Civic to access your microphone to record incident videos.",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Kenya Civic to access your photos to upload Form 34A.",
          "savePhotosPermission": "Allow Kenya Civic to save incident videos and Form 34A scans.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Kenya Civic to use your location to tag incident videos and Form 34A submissions with accurate geo-coordinates."
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow Kenya Civic to use Face ID for secure biometric authentication."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id"
      },
      "backendUrl": "https://4cjk8xzg5w77tfq474mq4utfs59jke49.app.specular.dev"
    }
  }
}
